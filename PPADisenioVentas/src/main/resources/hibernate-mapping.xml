<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="edu.core.entities.Pais" table="paises">
		<id name="idPais" type="int" column="pais_id" />
		<property name="nombre" column="pais_name" type="string" />
		<list name="provincias" table="provincias">
			<key column="Paises_pais_id" />
			<list-index column="provincia_id"  />
			<one-to-many class="edu.core.entities.Provincia" />
		</list>
	</class>

	<class name="edu.core.entities.Provincia" table="provincias">
		<id name="idProvincia" type="int">
			<column name="provincia_id" precision="5" scale="0" />
		</id>
		<property name="nombre" type="string">
			<column name="provincia_name"  />
		</property>
		<many-to-one name="pais" class="edu.core.entities.Pais"	column="Paises_pais_id"  />
	</class>

</hibernate-mapping>