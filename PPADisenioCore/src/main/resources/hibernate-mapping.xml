<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="edu.core.entities.Vendedor" table="vendedores">		    
		<id name="idVendedor" type="java.lang.Integer">
			<column name="vendedor_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<property name="nombre" type="string">
			<column name="vendedor_nombre" />
		</property>
		<property name="usuario" type="string">
			<column name="vendedor_user" />
		</property>
		<property name="contrasenia" type="string">
			<column name="vendedor_pass" />
		</property>
		
		<many-to-one name="puntoDeVenta" class="edu.core.entities.PuntoDeVenta"
			column="Punto_Venta_id" lazy="false" fetch="select" />
	</class>

	<class name="edu.core.entities.Localidad" table="localidades">
		<id name="idLocalidad" type="java.lang.Integer">
			<column name="localidad_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<property name="nombre" type="string">
			<column name="localidad_name" />
		</property>
	</class>

	<class name="edu.core.entities.Festival" table="festival">
		<id name="idFestival" type="java.lang.Integer">
			<column name="festival_id"/>
			<generator class="assigned" />
		</id>
		<property name="nombre" column="fest_nombre" type="java.lang.String" />
		<property name="fechaInicio" column="fecha_inicio" type="java.sql.Date" />
		<many-to-one name="estadio" class="edu.core.entities.Estadio"
			column="Estadios_estadio_id" fetch="select"/>
		<list name="noches" table="noches" fetch="select">
			<key column="Festival_festival_id" />
			<list-index column="noche_id" />
			<one-to-many class="edu.core.entities.Noche" />
		</list>
	</class>

	<class name="edu.core.entities.Noche" table="noches">
		<id name="idNoche" type="java.lang.Integer">
			<column name="noche_id"/>
			<generator class="assigned" />
		</id>
		<property name="fecha" column="noche_fecha" type="java.sql.Date" />
		<property name="horaInicio" column="noche_hora_inicio" type="java.sql.Time" />
		<property name="numero" column="noche_numero" type="java.lang.Integer" />
	</class>

	<class name="edu.core.entities.Estadio" table="estadios">
		<id name="idEstadio" type="java.lang.Integer">
			<column name="estadio_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<many-to-one name="localidad" class="edu.core.entities.Localidad"
			column="Localidades_localidad_id" lazy="false" fetch="select"/>
		<property name="nombre" column="estadio_nombre" type="java.lang.String" />
		<list name="sectores" table="sectores" fetch="select">
			<key column="Estadios_estadio_id" />
			<list-index column="sector_id" />
			<one-to-many class="edu.core.entities.Sector" />
		</list>
	</class>

	<class name="edu.core.entities.PuntoDeVenta" table="puntos_venta">
		<id name="idPunto" type="java.lang.Integer">
			<column name="puntos_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		
		<many-to-one name="localidad" class="edu.core.entities.Localidad"
			column="Localidades_localidad_id" />
		<property name="nombre" column="punto_name" type="java.lang.String" />
		<property name="direccion" column="punto_direccion" type="java.lang.String" />
		<many-to-one name="festival" class="edu.core.entities.Festival"
			column="punto_fest_id" />
	</class>

	<class name="edu.core.entities.Sector" table="Sectores">
		<id name="idSector" type="java.lang.Integer">
			<column name="sector_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<property name="color" column="sector_color" type="string" />
		<property name="precioSector" column="precio_base" type="java.lang.Float" />
		<list name="filas" table="filas" lazy="false" fetch="select">
			<key column="Sectores_sector_id" />
			<list-index column="fila_id" />
			<one-to-many class="edu.core.entities.Fila" />
		</list>
	</class>

	<class name="edu.core.entities.Fila" table="filas">
		<id name="idFila" type="java.lang.Integer">
			<column name="fila_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<property name="numero" column="fila_numero" type="java.lang.Integer" />
		<property name="precioFila" column="precio_base" type="java.lang.Float" />
		<list name="butacas" table="butacas" lazy="false" fetch="select">
			<key column="Filas_fila_id" />
			<list-index column="butaca_id" />
			<one-to-many class="edu.core.entities.Butaca" />
		</list>
		<many-to-one name="sector" class="edu.core.entities.Sector"
			column="Sectores_sector_id" lazy="false" fetch="select"/>
	</class>

	<class name="edu.core.entities.Butaca" table="butacas">
		<id name="idButaca" type="java.lang.Integer">
			<column name="butaca_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<property name="numero" column="butaca_numero" type="java.lang.Integer" />
		<property name="disponible" column="disponible" type="java.lang.Boolean" />
		<many-to-one name="fila" class="edu.core.entities.Fila"
			column="Filas_fila_id" lazy="false" fetch="select"/>
	</class>

	<class name="edu.core.entities.Entrada" table="entradas">
		<id name="numeroDeEntrada" type="java.lang.Integer">
			<column name="entrada_id" precision="5" scale="0" />
			<generator class="identity" />
		</id>
		<many-to-one name="noche" class="edu.core.entities.Noche"
			column="Noches_noche_id" lazy="false" fetch="select" />
		<property name="codigoDeBarra" column="codigo_barra" type="java.lang.Integer" />
		<property name="precio" column="entrada_precio" type="java.lang.Float" />
		<property name="fecha" column="entrada_fecha" type="java.sql.Date" />
		<property name="tipo" column="entrada_tipo" type="string" />
		<property name="clienteNombre" column="cliente_name" type="string" />
		
		<property name="anticipada" column="entrada_anticipada" type="java.lang.Boolean" />
	</class>

